{
    "namespace": "thlm_header",
    "header": {
        "$title|default": "title",
        "$binding|default": "#title_text",
        "$close_button_to_button_id": "button.exit_student",
        "type": "image",
        "size":["100%",22],
        "texture": "textures/ui/Black",
        "alpha": 0.0,
        "anchor_from": "top_middle",
        "anchor_to": "bottom_middle",
        "controls": [
            {
                "title@$title": {}
            }
        ]
    },
    "title": {
        "type": "label",
        "text": "$binding",
        "color":"$title_text_color",
        "font_size": "normal",
        "anchor_from": "center",
        "anchor_to": "center",
        "text_alignment": "left",
        "$close_button_offset|default": [ 0, 0 ],
        "$close_button_layer|default": 2,
        "offset": [ 4, 2 ],
        "size": [ "92.5%", "default" ],
        "bindings": [
            { "binding_name": "$binding" }
        ],
        "controls": [
            {
                "close@common.close_button": {
                    "layer": "$close_button_layer",
                    "offset": "$close_button_offset"
                }
            }
        ]
    }
}